<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="content">
      <% if (users.length > 0) { %> <% users.forEach(user => { %>
      <div class="user">
        <h3 class="title"><%= user.firstName %> <%= user.lastName %></h3>

        <p><%= user.email %></p>
      </div>

      <% }) %> <% } else { %>
      <p>Não existem usuários para ser exibidos...</p>
      <% } %>
    </div>
  </body>
</html>
